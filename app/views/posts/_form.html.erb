<%= form_with(model: post, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, id: :post_title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :kind %>
    <%= form.select :kind, ['text', 'image'], {}, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_area :content, id: :post_content, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit 'Submit this', class: 'btn btn-primary' %>
  </div>
<% end %>
